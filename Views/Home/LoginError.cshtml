
@{
    ViewBag.Title = "Login";
    Layout = null;
}


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")

<h2>Login To Kanban Master</h2>

@using (Html.BeginForm("Check_authority_Login", "Home", FormMethod.Post))
{
<div>
    <div class="alert alert-danger" role="alert">
        ERROR NO AUTHORITY TO LOGIN
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col">
                <a>Input Username and password</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <br />
                &nbsp;<input id="Text1" type="text" name="Text1" />
                <br />
                &nbsp;<input id="Password1" type="password" name="Password1" />
                <br />
                &nbsp;<input type="submit" value="Login" />
            </div>
        </div>
    </div>
</div>
}